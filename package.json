{
  "name": "hiku",
  "author": "Nick Musey",
  "private": true,
  "scripts": {
    "buildClient:watch": "webpack --config ./client/webpack.config.js --node-env development --mode development --watch",
    "buildServer:watch": "tsc --watch --project server/tsconfig.server.json",
    "runServer:watch": "nodemon ./build/server/index.js",
    "dev": "concurrently --names \"build-server,build-client,run-server\" --prefix-colors \"cyan,yellow,green\" \"npm run buildServer:watch\" \"npm run buildClient:watch\" \"npm run runServer:watch\"",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nmusey/hiku.git"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^15.3.1",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "concurrently": "^6.1.0",
    "css-loader": "^5.2.5",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-react": "^7.23.2",
    "html-webpack-plugin": "^5.3.1",
    "less-loader": "^9.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "prettier-eslint": "^12.0.0",
    "source-map-loader": "^2.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.2.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
